@model WeatherApp.Models.WeatherApplicationModel.ApplicationWeather

@{
    ViewData["Title"] = "Weather";
}

    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css" integrity="sha384-Zug+QiDoJOrZ5t4lssLdxGhVrurbmBWopoEl+M6BdEfwnCJZtKxi1KgxUyJq13dy" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/weather-icons/2.0.9/css/weather-icons.min.css">
        <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/weather-icons/2.0.9/css/weather-icons-wind.min.css">
    </head>

<div class="container">
    <form method="post">
        <div class="container">

            <label>Wprowadź miasto</label>
            <input asp-for="CityName" class="form-control" />
            <span asp-validation-for="CityName" class="text-danger"></span>

        </div>
        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">
                <button asp-controller="Home" asp-action="TodayWeather" class="btn btn-primary">Pogoda na teraz</button>
            </div>
            <div class="form-group col-md-offset-3 col-md-5">
                <button asp-controller="Home" asp-action="TomorrowWeather" class="btn btn-primary">Co będzie jutro</button>
            </div>
        </div>
    </form>

    <div class="container">

        <label asp-for="CityName" />
        <span class="badge col-4">@Model.CityName</span>

        <label asp-for="Temp" />
        <span class="badge col-4">@Model.Temp C</span>

        @*<i class="wi wi-owm-302 wi-owm-804 wi-owm-day-800"></i>
        <span class="badge col-4">@Model.Weather</span>*@


        <label asp-for="Description" />
        <span class="badge col-4">@Model.Description</span>

    </div>
</div>

